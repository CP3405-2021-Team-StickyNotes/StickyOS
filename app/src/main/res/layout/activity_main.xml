<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/icon_options"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="392dp"
        android:layout_height="590dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="61dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/trashBtn"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_trash" />

            <TextView
                android:id="@+id/alarm1"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="25sp"
                android:text="7:00 AM"
                android:textSize="28sp" />

            <Switch
                android:id="@+id/toggleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/trashBtn2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_trash" />

            <TextView
                android:id="@+id/alarm2"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="25sp"
                android:text="8:30 AM"
                android:textSize="28sp" />

            <Switch
                android:id="@+id/toggleBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/add_alarm"
        android:layout_width="78dp"
        android:layout_height="63dp"
        android:backgroundTint="#FFFFFF"
        android:scaleX="3"
        android:scaleY="3"
        android:onClick="addAlarm"
        app:srcCompat="@drawable/icon_btnadd"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="658dp" />

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="51dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="733dp">

        <ImageView
            android:id="@+id/tab_alarm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_alarm" />

        <ImageView
            android:id="@+id/tab_clock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openClock"
            app:srcCompat="@drawable/icon_clock" />

        <ImageView
            android:id="@+id/tab_stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_alarm" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>